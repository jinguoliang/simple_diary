<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editTabContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <com.google.android.material.tabs.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/editToolsTab"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/diary_detail_edit_tool_height"
            android:orientation="horizontal"
            android:background="@null"/>
    </FrameLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/toolArea"
        android:layout_width="match_parent"
        android:layout_height="@dimen/editor_tool_area_init_height"
        android:layout_gravity="bottom"
        android:background="@null"
        android:visibility="visible" />
</LinearLayout>