<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/statastics_for"
        android:textColor="@android:color/white"
        android:textSize="@dimen/card_view_title_text_size" />

    <Spinner
        android:id="@+id/yAxis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="30dp"
        android:layout_toStartOf="@id/slash"
        android:background="@null"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/card_view_button_text_size"
        tools:text="Words" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title"
        android:layout_toStartOf="@id/xAxis"
        android:text="@string/slash"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <Spinner
        android:id="@+id/xAxis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="5dp"
        android:background="@null"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/card_view_button_text_size"
        tools:text="Day" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/statisticChat"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/title" />

    <com.empty.jinux.simplediary.ui.main.statistics.view.ScoreChart
        android:id="@+id/scoreChart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/statisticChat" />
</RelativeLayout>

