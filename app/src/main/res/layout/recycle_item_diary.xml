<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/diary_list_item_height"
    android:background="@drawable/touch_feedback"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/weekBlock"
        android:layout_width="@dimen/swipe_item_menu_item_width"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp">


        <TextView
            android:id="@+id/weekName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            tools:text="周二" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/splitor"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/weekBlock"
        android:visibility="gone">

        <View
            android:layout_width="1.8dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryLine2" />
    </FrameLayout>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/splitor"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/black"
        tools:text="test title, it very long long long long long long " />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/title"
        android:layout_below="@id/title"
        android:textColor="@color/black"
        tools:text="22:54" />

    <View
        android:id="@+id/topLine"
        android:layout_width="match_parent"
        android:layout_height="1.8dp"
        android:background="@color/colorPrimaryLine2" />
</RelativeLayout>
